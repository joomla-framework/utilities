{
    "name": "joomla/utilities",
    "type": "joomla-package",
    "description": "Joomla Utilities Package",
    "keywords": ["joomla", "framework", "utilities"],
    "homepage": "https://github.com/joomla-framework/utilities",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
         "joomla/string": "~1.0",
         "joomla/filesystem": "~2.0"
    },
    "suggest": {
        "symfony/yaml": "Install 2.* if you require YAML support."
    },
    "require-dev": {
        "symfony/yaml": "~2.0",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Utilities\\": "src/",
            "Joomla\\Utilities\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    }
}
